## compiler

CXX = g++

# debugging options
CXXOPT = -g -Wall -Og
# enables optimizations
CXXOPT = -O2


## source files

# main
MAIN_CXX = main.cpp


## objects
MAIN_OBJ = main.o

OBJECTS = $(MAIN_OBJ)


## executables
MAIN_EXE = artificial-neural-network
TESTS = $(MAIN_EXE)
